<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.Edit">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
  >

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints" >
    <ImageView
        android:id="@+id/back_edit_detials"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/backarrow" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit information"
        android:textSize="18dp"
        android:layout_marginStart="30dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>
    </androidx.appcompat.widget.Toolbar>

        <TextView
            android:id="@+id/textView4"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#636363"
            android:textSize="12dp"
            android:textStyle="bold"
            android:text="Subject" />






            <AutoCompleteTextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/stroke_box"
                android:textColorHint="#AEAEAE"
                android:layout_marginTop="14dp"
                android:padding="8dp"
                android:hint="Select Subjcet"
                android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
                android:layout_marginHorizontal="18dp"
                android:textStyle="bold"
                android:inputType="none"
                android:dropDownHeight="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />







        <TextView
            android:id="@+id/textView5"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#636363"
            android:textSize="12dp"
            android:textStyle="bold"
            android:text="Class" />


        <AutoCompleteTextView
            android:id="@+id/standard_drop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/stroke_box"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:textColorHint="#AEAEAE"
            android:textSize="14dp"
            android:hint="Select class"
            android:textStyle="bold"
            android:layout_marginEnd="18dp"
            android:padding="8dp"
            android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
            app:layout_constraintTop_toBottomOf="@+id/gender_tv">


        </AutoCompleteTextView>

        <TextView
            android:id="@+id/textView11"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#636363"
            android:textSize="12dp"
            android:textStyle="bold"
            android:text="Chapter" />




            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="18dp"
                android:background="@drawable/stroke_box"
                android:id="@+id/capter_edit"
                android:padding="8dp"
                android:layout_marginTop="12dp"
                android:inputType="none"
                android:textStyle="bold"
                android:hint="Select chapter "
                android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/close_chapter"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>






        <TextView
            android:id="@+id/textView6"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#636363"
            android:textSize="12dp"
            android:textStyle="bold"
            android:text="Topic" />


        <AutoCompleteTextView
            android:id="@+id/topic_drop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/stroke_box"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:textColorHint="#AEAEAE"
            android:textSize="14dp"
            android:inputType="none"
            android:hint="Select topic"
            android:textStyle="bold"
            android:layout_marginEnd="18dp"
            android:padding="8dp"
            android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
            app:layout_constraintTop_toBottomOf="@+id/gender_tv">


        </AutoCompleteTextView>

        <TextView
            android:id="@+id/textView7"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#636363"
            android:textSize="12dp"
            android:textStyle="bold"
            android:text="Title" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:inputType="none"
            android:textStyle="bold"
            android:hint="Enter title"
            android:background="@drawable/stroke_box"
            android:layout_marginStart="18dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="18dp"
            android:id="@+id/title_edit"/>

        <Button
            android:id="@+id/button_save_edit"
            android:layout_width="match_parent"
            android:layout_marginTop="40dp"
            android:enabled="false"
            android:layout_marginHorizontal="18dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:text="Save" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_cancel_edit"
            android:layout_width="match_parent"
            android:layout_marginVertical="18dp"
            android:layout_marginHorizontal="18dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button_color_white"
            android:text="cancel" />
    </LinearLayout>
</ScrollView>
</FrameLayout>

